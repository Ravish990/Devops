pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('Git Checkout') {
            steps {
                echo 'Performing Git Checkout'
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                bat 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                bat 'mvn test'
            }
        }
        stage('Run JAR') {
            steps {
                script {
                    echo 'Running the JAR file'
                    def output = bat(script: 'java -jar target/simple-java-project-1.0-SNAPSHOT.jar', returnStdout: true).trim()
                    echo "Output from JAR: ${output}"
                }
            }
        }
    }
}